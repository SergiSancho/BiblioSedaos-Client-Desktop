<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bibliosedaos.desktop.controller.GroupFormController"
            prefWidth="820" prefHeight="700"
            id="formRoot"
            styleClass="root">

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER">
            <VBox styleClass="edit-vbox" spacing="20" alignment="TOP_CENTER" prefWidth="760">
                <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

                <HBox alignment="CENTER" spacing="10">
                    <SVGPath fx:id="formIcon" styleClass="profile-icon"/>
                    <Label fx:id="titleLabel" styleClass="title-label"/>
                </HBox>

                <GridPane hgap="16" vgap="16" alignment="CENTER" maxWidth="720" styleClass="form-grid">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="35" halignment="RIGHT"/>
                        <ColumnConstraints percentWidth="65" hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Dades del Grup" styleClass="section-label"
                           GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0"/>

                    <Label text="ID" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="groupIdLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Nom *" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="nomField" promptText="Nom del grup"
                               GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Temàtica *" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="tematicaField" promptText="Temàtica del grup"
                               GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Horari *" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <HBox spacing="8" GridPane.rowIndex="4" GridPane.columnIndex="1">
                        <ComboBox fx:id="horariCombo" prefWidth="260"/>
                        <Label fx:id="horariLabel" styleClass="autor-label"/>

                    </HBox>

                    <Label text="Administrador" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <Label fx:id="adminLabel" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <Label text="Membres" styleClass="section-label"
                           GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

                    <TableView fx:id="membresTable" GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.columnSpan="2"
                               styleClass="data-table" minHeight="190" prefHeight="180">
                        <placeholder>
                            <Label text="No hi ha cap membre al grup"/>
                        </placeholder>
                        <columns>
                            <TableColumn fx:id="membreIdColumn" text="ID" styleClass="id-column" minWidth="50"/>
                            <TableColumn fx:id="membreNomColumn" text="Nom" minWidth="180"/>
                            <TableColumn fx:id="membreEmailColumn" text="Email" minWidth="180"/>
                            <TableColumn fx:id="membreActionsColumn" text="Accions" minWidth="90"/>
                        </columns>
                    </TableView>

                    <HBox spacing="12" alignment="CENTER" styleClass="buttons-container"
                          GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.columnSpan="2">

                        <Region HBox.hgrow="ALWAYS"/>

                        <Button fx:id="apuntarButton" text="Apuntar-se" onAction="#onApuntar"
                                styleClass="primary-btn" prefWidth="140" visible="false"/>
                        <Button fx:id="desapuntarButton" text="Desapuntar-se" onAction="#onDesapuntar"
                                styleClass="primary-btn" prefWidth="140" visible="false"/>
                        <Button fx:id="eliminarButton" text="Eliminar Grup" onAction="#onEliminar"
                                styleClass="primary-btn" prefWidth="140" visible="false"/>
                        <Button fx:id="backButton" text="Tornar" onAction="#onBack"
                                styleClass="secondary-btn" prefWidth="140" visible="false"/>

                        <Region prefWidth="16"/>

                        <Button fx:id="saveButton" text="Crear Grup" onAction="#onSave"
                                styleClass="primary-btn" prefWidth="140" visible="false"/>
                        <Button fx:id="cancelButton" text="Cancel·lar" onAction="#onCancel"
                                styleClass="secondary-btn" prefWidth="140" visible="false"/>

                    </HBox>
                </GridPane>

                <Label text="* Camps obligatoris" styleClass="required-note"/>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>