<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bibliosedaos.desktop.controller.LoginController"
            prefWidth="1000" prefHeight="600"
            styleClass="root">

    <left>
        <StackPane styleClass="left-pane" BorderPane.alignment="CENTER">

        </StackPane>
    </left>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER">
            <StackPane>

                <VBox alignment="TOP_CENTER"
                      spacing="24"
                      prefWidth="720" maxWidth="720" minWidth="320">
                    <padding>
                        <Insets top="30" right="30" bottom="30" left="30"/>
                    </padding>

                    <StackPane prefHeight="80">
                        <padding>
                            <Insets top="30" bottom="60"/>
                        </padding>
                        <SVGPath styleClass="lock-icon"
                                 content="M18 10v-4c0-3.313-2.687-6-6-6s-6 2.687-6 6v4h-3v14h18v-14h-3zm-5 7.723v2.277h-2v-2.277c-.595-.347-1-.984-1-1.723 0-1.104.896-2 2-2s2 .896 2 2c0 .738-.404 1.376-1 1.723zm-5-7.723v-4c0-2.206 1.794-4 4-4 2.205 0 4 1.794 4 4v4h-8z"
                        />
                    </StackPane>

                    <GridPane hgap="16" vgap="18" alignment="CENTER" maxWidth="720">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="30" halignment="RIGHT"/>
                            <ColumnConstraints percentWidth="70" hgrow="ALWAYS"/>
                        </columnConstraints>

                        <Label text="Usuari/a"
                               styleClass="field-label"
                               GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="usernameField"
                                   promptText="Introdueix el teu nom d'usuari"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"
                                   GridPane.hgrow="ALWAYS"/>

                        <Label text="Contrasenya"
                               styleClass="field-label"
                               GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <PasswordField fx:id="passwordField"
                                       promptText="Introdueix la teva contrassenya"
                                       GridPane.rowIndex="1" GridPane.columnIndex="1"
                                       GridPane.hgrow="ALWAYS"/>

                        <Label fx:id="errorLabel"
                               textFill="RED" visible="false" wrapText="true"
                               GridPane.rowIndex="2" GridPane.columnIndex="1"
                               GridPane.columnSpan="2"/>

                        <HBox styleClass="buttons-container"
                              spacing="14"
                              alignment="CENTER"
                              GridPane.rowIndex="3" GridPane.columnIndex="0"
                              GridPane.columnSpan="2">
                            <Button fx:id="loginButton"
                                    text="Login"
                                    onAction="#onLogin"
                                    styleClass="primary-btn"
                                    HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                            <Button fx:id="cancelButton"
                                    text="Tancar"
                                    onAction="#onCancel"
                                    styleClass="secondary-btn"
                                    HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                        </HBox>
                    </GridPane>
                </VBox>
            </StackPane>
        </ScrollPane>
    </center>
</BorderPane>
