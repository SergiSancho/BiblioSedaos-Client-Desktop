<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bibliosedaos.desktop.controller.BookFormController"
            prefWidth="820" prefHeight="700"
            id="formRoot"
            styleClass="root">

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER">
            <VBox styleClass="edit-vbox" spacing="20" alignment="TOP_CENTER" prefWidth="760">
                <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

                <HBox alignment="CENTER" spacing="10">
                    <SVGPath fx:id="formIcon" styleClass="profile-icon"/>
                    <Label fx:id="titleLabel" styleClass="title-label"/>
                </HBox>

                <GridPane hgap="16" vgap="16" alignment="CENTER" maxWidth="720" styleClass="form-grid">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="35" halignment="RIGHT"/>
                        <ColumnConstraints percentWidth="65" hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Dades del Llibre" styleClass="section-label" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0"/>

                    <Label text="ID" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="bookIdLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="ISBN" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="isbnField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Títol" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="titolField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Autor" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <HBox spacing="8" GridPane.rowIndex="4" GridPane.columnIndex="1">
                        <ComboBox fx:id="autorCombo" prefWidth="260"/>
                        <Label fx:id="autorLabel" styleClass="autor-label"/>
                        <Button fx:id="addAutorButton" onAction="#onAddAutor" text="Afegir Autor" styleClass="secondary-btn" maxHeight="20"/>
                    </HBox>

                    <Label text="Pàgines" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <TextField fx:id="paginesField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <Label text="Editorial" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    <TextField fx:id="editorialField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                    <HBox spacing="12" alignment="CENTER_RIGHT" GridPane.rowIndex="7" GridPane.columnIndex="1" style="-fx-padding: 0 0 20 0;">
                        <Button fx:id="saveButton" text="Guardar Llibre" onAction="#onSave" styleClass="primary-btn"/>
                    </HBox>

                    <Label text="Exemplars" styleClass="section-label" GridPane.rowIndex="8" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

                    <TableView fx:id="exemplarsTable" GridPane.rowIndex="9" GridPane.columnIndex="0" GridPane.columnSpan="2"
                               styleClass="data-table" GridPane.vgrow="ALWAYS" minHeight="140" prefHeight="200">
                        <placeholder>
                            <Label text="No hi ha cap exemplar"/>
                        </placeholder>
                        <columns>
                            <TableColumn fx:id="exemplarIdColumn" text="ID" styleClass="id-column" minWidth="50"/>
                            <TableColumn fx:id="exemplarLlocColumn" text="Lloc" minWidth="140"/>
                            <TableColumn fx:id="exemplarReservatColumn" text="Estat" minWidth="40"/>
                            <TableColumn fx:id="exemplarActionsColumn" text="Accions" minWidth="90"/>
                        </columns>
                    </TableView>

                    <Label fx:id="llocLabel" text="Lloc" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
                    <TextField fx:id="exemplarLlocField" GridPane.rowIndex="10" GridPane.columnIndex="1"/>

                    <Label fx:id="estatLabel" text="Estat" GridPane.rowIndex="11" GridPane.columnIndex="0"/>
                    <Label fx:id="exemplarEstatLabel" text="Disponible" GridPane.rowIndex="11" GridPane.columnIndex="1"/>

                    <HBox spacing="12" alignment="CENTER" styleClass="buttons-container" GridPane.rowIndex="12" GridPane.columnIndex="0" GridPane.columnSpan="2">
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="exemplarButton" text="Guardar Exemplar" onAction="#onAddExemplar" styleClass="primary-btn"/>
                        <Button fx:id="backButton" text="Tornar" onAction="#onBack" styleClass="secondary-btn"/>
                    </HBox>
                </GridPane>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>