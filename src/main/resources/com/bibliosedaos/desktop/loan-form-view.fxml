<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.bibliosedaos.desktop.controller.LoanFormController"
            prefWidth="820" prefHeight="700"
            id="formRoot"
            styleClass="root">

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER">
            <VBox styleClass="edit-vbox" spacing="20" alignment="TOP_CENTER" prefWidth="760">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <HBox alignment="CENTER" spacing="10">
                    <SVGPath fx:id="formIcon" styleClass="profile-icon"/>
                    <Label fx:id="titleLabel" styleClass="title-label"/>
                </HBox>

                <GridPane hgap="16" vgap="16" alignment="CENTER" maxWidth="720" styleClass="form-grid">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="35" halignment="RIGHT"/>
                        <ColumnConstraints percentWidth="65" hgrow="ALWAYS"/>
                    </columnConstraints>

                    <VBox fx:id="createContainer" spacing="16" GridPane.columnIndex="0" GridPane.columnSpan="2">
                        <Label text="Dades Nou Prestec" styleClass="section-label"/>

                        <HBox spacing="16" alignment="CENTER_LEFT">
                            <Label text="ID Exemplar *" styleClass="field-label" minWidth="120"/>
                            <TextField fx:id="exemplarIdField" promptText="Introdueix ID de l'exemplar"
                                       styleClass="text-field" prefWidth="180"/>
                            <Button fx:id="searchExemplarButton" text="Cercar Exemplar" onAction="#onSearchExemplars"
                                    styleClass="secondary-btn" prefWidth="160" maxHeight="20"/>
                        </HBox>

                        <HBox spacing="16" alignment="CENTER_LEFT">
                            <Label text="ID Usuari *" styleClass="field-label" minWidth="120"/>
                            <TextField fx:id="usuariIdField" promptText="Introdueix ID de l'usuari"
                                       styleClass="text-field" prefWidth="180"/>
                            <Button fx:id="searchUserButton" text="Cercar Usuari" onAction="#onSearchUsers"
                                    styleClass="secondary-btn" prefWidth="160" maxHeight="20"/>
                        </HBox>
                    </VBox>

                    <VBox fx:id="viewContainer" spacing="16" GridPane.columnIndex="0" GridPane.columnSpan="2">

                        <Label text="Dades del Prestec" styleClass="section-label"/>

                        <HBox spacing="16" alignment="CENTER_LEFT">
                            <Label text="ID Prestec" styleClass="field-label" minWidth="120"/>
                            <Label fx:id="loanIdLabel" styleClass="value-label"/>
                        </HBox>

                        <HBox spacing="16" alignment="CENTER_LEFT">
                            <Label text="Data Prestec" styleClass="field-label" minWidth="120"/>
                            <Label fx:id="dataPrestecLabel" styleClass="value-label"/>
                        </HBox>

                        <HBox spacing="16" alignment="CENTER_LEFT">
                            <Label text="Data Devolucio" styleClass="field-label" minWidth="120"/>
                            <Label fx:id="dataDevolucioLabel" styleClass="value-label"/>
                        </HBox>

                        <Label text="Dades de l'Exemplar" styleClass="section-label"/>

                        <HBox spacing="16" alignment="CENTER_LEFT">
                            <Label text="ID Exemplar" styleClass="field-label" minWidth="120"/>
                            <Label fx:id="exemplarIdLabel" styleClass="value-label"/>
                        </HBox>

                        <HBox spacing="16" alignment="CENTER_LEFT">
                            <Label text="Titol Llibre" styleClass="field-label" minWidth="120"/>
                            <Label fx:id="titolLlibreLabel" styleClass="value-label"/>
                        </HBox>

                        <HBox spacing="16" alignment="CENTER_LEFT">
                            <Label text="Lloc" styleClass="field-label" minWidth="120"/>
                            <Label fx:id="llocExemplarLabel" styleClass="value-label"/>
                        </HBox>

                        <Label text="Dades de l'Usuaria" styleClass="section-label"/>

                        <HBox spacing="16" alignment="CENTER_LEFT">
                            <Label text="ID Usuari" styleClass="field-label" minWidth="120"/>
                            <Label fx:id="usuariIdLabel" styleClass="value-label"/>
                        </HBox>

                        <HBox spacing="16" alignment="CENTER_LEFT">
                            <Label text="Nom Usuari" styleClass="field-label" minWidth="120"/>
                            <Label fx:id="nomUsuariLabel" styleClass="value-label"/>
                        </HBox>

                        <HBox spacing="16" alignment="CENTER_LEFT">
                            <Label text="Email" styleClass="field-label" minWidth="120"/>
                            <Label fx:id="emailUsuariLabel" styleClass="value-label"/>
                        </HBox>
                    </VBox>

                    <Label fx:id="errorLabel" styleClass="error-label" visible="false" wrapText="true"
                           GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

                    <HBox spacing="12" alignment="CENTER" styleClass="buttons-container"
                          GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2">

                        <Region HBox.hgrow="ALWAYS"/>

                        <Button fx:id="createButton" text="Crear Prestec" onAction="#onCreate"
                                styleClass="primary-btn" prefWidth="140"/>
                        <Button fx:id="devolucioButton" text="Devolucio" onAction="#onDevolucio"
                                styleClass="primary-btn" prefWidth="140" visible="false"/>
                        <Button fx:id="backButton" text="Tornar" onAction="#onBack"
                                styleClass="secondary-btn" prefWidth="140"/>
                        <Button fx:id="cancelButton" text="CancelÂ·lar" onAction="#onCancel"
                                styleClass="secondary-btn" prefWidth="140"/>

                    </HBox>
                </GridPane>

                <Label fx:id="requiredNoteLabel" text="* Camps obligatoris" styleClass="required-note"/>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>